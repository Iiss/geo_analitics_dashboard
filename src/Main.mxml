<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:views="views.*" initialize="init()">
	<fx:Script>
		<![CDATA[
			import ru.marstefo.liss.net.SFS2XProxy;
			import ru.marstefo.liss.net.SFS2XProxyEvent;
			private function init():void
			{
				var sfs:SFS2XProxy = new SFS2XProxy('The Lobby');
				sfs.addEventListener(SFS2XProxyEvent.CONSOLE_MESSAGE, onMessage);
			}
			
			private function onMessage(e:SFS2XProxyEvent):void
			{
				console.text+=e.data.toString()+'\n';
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:TextArea id="console" width="100%" height="100%">
		
	</s:TextArea>
</s:Application>